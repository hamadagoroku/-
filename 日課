  <div class="quest-list">
    <label><input type="checkbox" data-quest="ã‚¯ã‚¨ã‚¹ãƒˆ1"> ã‚¯ã‚¨ã‚¹ãƒˆ1</label>
    <label><input type="checkbox" data-quest="ã‚¯ã‚¨ã‚¹ãƒˆ2"> ã‚¯ã‚¨ã‚¹ãƒˆ2</label>
    <label><input type="checkbox" data-quest="ã‚¯ã‚¨ã‚¹ãƒˆ3"> ã‚¯ã‚¨ã‚¹ãƒˆ3</label>

    <div>
      <label for="dateSelector">ğŸ“… éå»ã®å±¥æ­´ã‚’è¦‹ã‚‹ï¼š</label>
      <select id="dateSelector"></select>
    </div>
  </div>

  <script>
    const checkboxes = document.querySelectorAll('input[type="checkbox"]');
    const dateSelector = document.getElementById('dateSelector');

    const getToday = () => new Date().toISOString().split('T')[0];
    const today = getToday();

    // Load history from localStorage
    const history = JSON.parse(localStorage.getItem('questHistory') || '{}');

    // Save current state
    function saveState() {
      const dayData = {};
      checkboxes.forEach(cb => {
        dayData[cb.dataset.quest] = cb.checked;
      });
      history[today] = dayData;
      localStorage.setItem('questHistory', JSON.stringify(history));
      populateDateSelector();
    }

    // Load specific day's data
    function loadState(date) {
      const saved = history[date] || {};
      checkboxes.forEach(cb => {
        cb.checked = saved[cb.dataset.quest] || false;
      });
    }

    // Populate dropdown
    function populateDateSelector() {
      const dates = Object.keys(history).sort().reverse();
      dateSelector.innerHTML = dates.map(date => 
        `<option value="${date}">${date}${date === today ? 'ï¼ˆä»Šæ—¥ï¼‰' : ''}</option>`
      ).join('');
    }

    // Event listeners
    checkboxes.forEach(cb => {
      cb.addEventListener('change', saveState);
    });

    dateSelector.addEventListener('change', (e) => {
      loadState(e.target.value);
    });

    // Init
    populateDateSelector();
    loadState(today);
  </script>

